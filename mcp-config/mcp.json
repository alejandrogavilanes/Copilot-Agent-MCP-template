      "args": [
        "run", 
        "-i",  
        "--rm",
        "-e",  
        "DATABASE_URI",
        "crystaldba/postgres-mcp",
        "--access-mode=unrestricted"
      ],
      "env": {
        "DATABASE_URI": "postgresql://admin:root@localhost:5432/test_db"
      }
    }  
  }    
}      
